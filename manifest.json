{
    "name": "host manager",
    "description": "一款chrome host管理插件，操作简便，即刻生效。",
    "version": "0.1",
    "manifest_version": 3,
    "action": {
        "default_title": "一款chrome host管理插件，操作简便，即刻生效。",
        "default_popup": "dist/index.html",
        "default_icon": {
            "16": "icons/16.png",
            "32": "icons/32.png",
            "48": "icons/48.png",
            "128": "icons/128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "default_locale": "en",
    "permissions": ["notifications", "proxy", "storage", "cookies"],
    "host_permissions": ["*://*/*"],
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}
